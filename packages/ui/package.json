{
  "private": true,
  "name": "@acme/ui",
  "version": "1.0.0",
  "description": "Acme UI components for React Native",
  "author": "Cedric van Putten <me@bycedric.com>",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "build/module/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react-native",
    "dev": "tsup src/index.tsx --format esm,cjs --watch --dts --external react-native",
    "lint": "TIMING=1 eslint src --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@acme/eslint-config": "*",
    "@tsconfig/recommended": "^1.0.1",
    "typescript": "^4.5.3",
    "tsup": "^5.10.1"
  },
  "eslintConfig": {
    "extends": "@acme/eslint-config"
  }
}
