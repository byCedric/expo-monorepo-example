{
  "private": true,
  "name": "@acme/app-mobile",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "expo start",
    "lint": "eslint --ext js,ts,tsx .",
    "build": "expo export --output-dir ./build --platform all",
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "eas-build-post-install": "pnpm run -w build:mobile"
  },
  "dependencies": {
    "@acme/feature-home": "workspace:*",
    "@expo/metro-runtime": "4.0.0-preview.0",
    "expo": "52.0.0-preview.18",
    "expo-dev-client": "5.0.0-preview.6",
    "expo-status-bar": "~2.0.0",
    "expo-updates": "~0.26.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "0.76.1",
    "react-native-web": "~0.19.13"
  },
  "devDependencies": {
    "@acme/eslint-config": "workspace:*",
    "@babel/core": "^7.26.0",
    "@types/react": "~18.3.12",
    "@types/react-dom": "~18.3.1",
    "babel-preset-expo": "12.0.0-preview.4"
  },
  "eslintConfig": {
    "extends": "@acme/eslint-config",
    "ignorePatterns": [
      "node_modules",
      "build",
      ".expo",
      ".expo-shared"
    ],
    "overrides": [
      {
        "files": [
          "*.js"
        ],
        "env": {
          "node": true
        }
      }
    ]
  }
}
