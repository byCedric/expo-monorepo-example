{
  "private": true,
  "name": "@acme/monorepo",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "nohoist": [
      "template/**",
      "**/template/**"
    ]
  },
  "scripts": {
    "dev": "turbo dev",
    "dev:example": "turbo dev --filter=\"{./apps/example}...\"",
    "lint": "turbo lint",
    "test": "turbo test",
    "build": "turbo build",
    "build:example": "turbo build --filter=\"...{./apps/example}\"",
    "build:packages": "yarn workspace @acme/ui build && yarn workspace @acme/feature-home build",
    "example": "turbo dev --filter=\"...{./apps/example}\"",
    "clean": "rm -rf node_modules && rm -rf .turbo && yarn workspaces run clean"
  },
  "devDependencies": {
    "turbo": "^1.10.7",
    "typescript": "^4.9.5"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
